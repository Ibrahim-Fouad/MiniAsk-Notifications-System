@model IEnumerable<Notifications_System.Models.NotificationModels.Notification>
@{
    ViewBag.Title = "Notifications";
}

<h2>Notifications</h2>
<div class="notifications-container">
    @if (Model.Count() == 0)
    {
        <p>
            You have not any notifications.
        </p>
    }
    else
    {

        <ul>
            @foreach (var notification in Model)
            {
                <li>
                    <a href="@Url.Action("Question", "Home", new {postId = notification.PostId, notificationId = notification.Id})">
                        <div class="row">
                            <div class="col-md-1 col-sm-1 col-xs-1">
                                <img src="~/Images/514607.jpg" alt="" class="img img-circle img-responsive" width="50" style="min-width: 30px;" />

                            </div>
                            <div class="col-md-11 col-sm-11 col-xs-11">
                                <span class="message">@notification.Message</span>
                                <span class="datetime">@notification.DateCreated.ToString()</span>
                            </div>
                        </div>

                    </a>
                </li>
            }
        </ul>


    }
</div>